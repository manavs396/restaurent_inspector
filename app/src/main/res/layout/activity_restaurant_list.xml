<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RestaurantList">

    <TextView
        android:id="@+id/surrey_restaurant_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/surrey_restaurant_list"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@id/main_toolbar"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <ListView
        android:id="@+id/restaurant_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surrey_restaurant_list"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/info_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:foreground="@android:drawable/ic_menu_info_details"
        android:layout_below="@id/main_toolbar"
        android:layout_alignParentStart="true"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <Button
        android:id="@+id/gotomap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/goto_map"
        android:background="@drawable/white_border" />

</RelativeLayout>